body {
  font-family: Arial, sans-serif;
  margin: 0;
  background: #fff;
  color: #111;
}

header {
  text-align: center;
  padding: 1rem;
  background: #111;
  color: #fff;
}

nav {
  margin-top: 1rem;
}

.tab-btn {
  padding: 0.5rem 1rem;
  margin: 0.3rem;
  border: none;
  cursor: pointer;
  border-radius: 5px;
  background: #eee;
  color: #111;
  font-weight: bold;
}

.tab-btn.active {
  background: orange;
  color: #fff;
}

.tab-content {
  display: none;
  padding: 1rem;
}

.tab-content.active {
  display: block;
}
